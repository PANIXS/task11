<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="jp.co.realsys.dao.StudentDao">
  <select id="getStudent" parameterType="java.lang.String"
    resultType="student">
    <![CDATA[
      select id from student where id=#{id}
    ]]>
  </select>
  <insert id="saveStudent" parameterType="student">
    <![CDATA[
      insert into student values(#{id},#{name},#{birthDate},#{address})
    ]]>
  </insert>
  <update id="updateStudent" parameterType="student">
    <![CDATA[
      update student set name = #{name},birthdate = #{birthDate},address = #{address} where id=#{id}
    ]]>
  </update>
  <select id="getStudentByName" parameterType="java.lang.String"
    resultType="student">
    <![CDATA[
      select * from student where name=#{name}
    ]]>
  </select>
  <select id="getStudentById" parameterType="java.lang.String"
    resultType="student">
    <![CDATA[
      select * from student where id=#{id}
    ]]>
  </select>
  <delete id="delete" parameterType="java.lang.String">
    <![CDATA[
      delete from student where id=#{id} 
    ]]>
  </delete>
</mapper>


